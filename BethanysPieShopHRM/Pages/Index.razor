@page "/"

<h1 class="page-title">Welcome to Bethany's Pie Shop HRM!</h1>
<br />
<h3>Using this application, you can manage our wonderful staff working for us all over the world, bringing people the best pies ever!</h3>

<button class="btn btn-outline-primary" @onclick="showSelectionModal" title="employee selection" style="border:0;">
    <i class="fa fa-check" aria-hidden="true"></i>
</button>
<BethanysPieShopHRM.Pages.Employees.EmployeeSelection @ref="@_employeeSelection" SelectionCallBack="@Reciever" />

@if (_recievedItem == null)
{
    <p>Please select an item</p>
}
else
{
    <p>Selected Item Id is: @_recievedItem.EmployeeId</p>
}

@code{
    Employee _recievedItem;

    private BethanysPieShopHRM.Pages.Employees.EmployeeSelection _employeeSelection;
    private void showSelectionModal()
    {
        _employeeSelection.Show();
        StateHasChanged();
    }

    private void Reciever(Employee recievedItem)
    {
        _recievedItem = recievedItem;
        StateHasChanged();
    }
}